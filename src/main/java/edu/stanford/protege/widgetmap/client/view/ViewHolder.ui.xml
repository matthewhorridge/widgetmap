<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="wm" type="edu.stanford.protege.widgetmap.resources.WidgetMapClientBundle"/>
    <ui:with field="msg" type="edu.stanford.protege.widgetmap.client.Messages"/>

    <ui:style>

        .main {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .button-bar {
            display: inline;
            position: absolute;
            right: 1px;
            top: 0;
            height: 16px;
            overflow: hidden;
        }
        .content {
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .label {
            line-height: 20px;
        }

        .container {
            width: 10px;
            height: 10px;
            color: white;
            cursor: pointer;
            padding: 2px;
            stroke-width: 3.5;
            stroke: currentColor;
        }

        .container:hover {
        }

        .container svg {

        }

        .header {
            position: absolute; left: 1px; right: 1px; height: 20px;
        }

        .widgetHolder {
            width: 100%; height: 100%;
        }

    </ui:style>

    <!--&#x2716;-->
    <g:HTMLPanel ui:field="viewHeader" addStyleNames="{style.main}">
        <g:HTMLPanel addStyleNames="{wm.style.widgetHolder} {style.widgetHolder}">
            <g:HTMLPanel styleName="{wm.style.widgetHolderHeader} {style.header}">
                <g:InlineLabel text="View" ui:field="viewLabel" addStyleNames="{style.label} {wm.style.widgetHolderLabel}"/>
                <g:FlowPanel ui:field="buttonBar" addStyleNames="{style.button-bar}">
                    <g:HTMLPanel addStyleNames="{style.container}" title="{msg.close}" ui:field="closeButton">
                        <svg width="10" height="10">
                            <line x1="1" y1="1" x2="9" y2="9"/>
                            <line x1="1" y1="9" x2="9" y2="1"/>
                        </svg>
                    </g:HTMLPanel>
                </g:FlowPanel>

            </g:HTMLPanel>
            <div style="position: absolute; left: 1px; right: 1px; top: 21px; bottom: 2px; box-sizing: border-box; -moz-box-sizing: border-box;">
                <g:Widget ui:field="widget" addStyleNames="{style.content}"/>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
