<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:wm="urn:import:edu.stanford.protege.widgetmap.client.view">

    <ui:style>

        .main {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .button-bar {
            display: inline;
            position: absolute;
            right: 1px;
            top: 0;
            height: 16px;
            overflow: hidden;
        }
        .content {
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .label {
            line-height: 20px;
        }

        .container {
            width: 10px;
            height: 10px;
            color: white;
            cursor: pointer;
            padding: 2px;
            stroke-width: 3.5;
            stroke: currentColor;
        }

        .container:hover {
            stroke-width: 4;
        }

        .container svg {

        }



    </ui:style>

    <!--&#x2716;-->
    <g:HTMLPanel ui:field="viewHeader" addStyleNames="{style.main}">
        <div class="widget-holder" style="width: 100%; height: 100%;">
            <div style="position: absolute; left: 1px; right: 1px; height 20px;" class="widget-holder-header">
                <g:InlineLabel text="View" ui:field="viewLabel" styleName="widget-holder-label" addStyleNames="{style.label}"/>
                <g:FlowPanel ui:field="buttonBar" addStyleNames="{style.button-bar}">
                    <g:HTMLPanel addStyleNames="{style.container}" title="Close" ui:field="closeButton">
                        <svg width="10" height="10">
                            <line x1="1" y1="1" x2="9" y2="9"/>
                            <line x1="1" y1="9" x2="9" y2="1"/>
                        </svg>
                    </g:HTMLPanel>
                </g:FlowPanel>

            </div>
            <div style="position: absolute; left: 1px; right: 1px; top: 21px; bottom: 2px; box-sizing: border-box; -moz-box-sizing: border-box;">
                <g:Widget ui:field="widget" addStyleNames="{style.content}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
